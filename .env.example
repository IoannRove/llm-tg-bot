# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here
BOT_USERNAME=@your_bot_username

# AI Configuration (Primary)
AI_PROVIDER=openai  # openai, deepseek, openrouter
AI_API_KEY=your_api_key_here
AI_MODEL=gpt-4o-mini
# AI_BASE_URL=https://api.deepseek.com  # Optional, for custom providers

# AI Configuration (Fallback - Optional)
# FALLBACK_AI_PROVIDER=deepseek
# FALLBACK_AI_API_KEY=your_fallback_api_key_here
# FALLBACK_AI_MODEL=deepseek-chat
# FALLBACK_AI_BASE_URL=https://api.deepseek.com

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Bot Behavior
BASE_PROMPT="You are a helpful assistant in a Telegram chat. You maintain context and respond when mentioned. Always respond naturally without including your username."
CONTEXT_WINDOW_SIZE=50
TRIGGER_WORDS=бот,bot,помощь,help,вопрос,question,вика
